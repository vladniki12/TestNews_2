<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="VerticalOffsetPopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:topOffset">0dp</item>
        <item name="android:startOffset">0</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:popupMenuStyle">@style/VerticalOffsetPopupMenuStyle</item>
        <item name="popupMenuStyle">@style/VerticalOffsetPopupMenuStyle</item>

    </style>
    <style name="NoActionBarThemeSplash" parent="NoActionBarTheme">
    </style>
</resources>
